<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <AutoCompleteTextView
            android:id="@+id/et_input_money"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:background="@drawable/_easy_edit_text_underline_background"
            android:gravity="bottom"
            android:hint="0.00"
            android:minWidth="80dp"
            android:singleLine="true"
            android:textColor="#335EC2"
            android:textColorHint="#335EC2"
            android:textCursorDrawable="@drawable/_easy_edit_text_cursor"
            android:textSize="16sp" />

        <com.jen.easyui.view.gif.GifView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:gifSrc="@mipmap/gif_test" />

        <com.jen.easyui.view.gif.GifView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            app:gifSrc="@mipmap/gif_login_out_tips" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11111111111111" />

        <com.jen.easyui.view.baseview.AlignTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:alignOneTextWithCount="4"
            app:alignEndTextIgnore="true"
            android:text="电话：" />

        <com.jen.easyui.view.baseview.AlignTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:alignEndTextIgnore="true"
            app:alignOneTextWithCount="1"
            android:text="电话号：" />

        <com.jen.easyui.view.baseview.AlignTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话号码：" />

    </LinearLayout>
</LinearLayout>
