<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/popup_window_str"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="PopupWindowStr"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/popup_window_object"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="PopupWindowObject"
        android:textAllCaps="false" />
    <Button
        android:id="@+id/popup_window_letter"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="PopupWindowLetter"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/popup_window_right"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="PopupWindowRight"
        android:textAllCaps="false" />

    <View
        android:id="@+id/popup_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:text="右边显示"
            android:textColor="#000" />
    </RelativeLayout>
</LinearLayout>
