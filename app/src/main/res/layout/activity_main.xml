<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.jen.easyui.view.baseview.EasyTopBar
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="#DDDDDD"
            app:topBarTitleText="TopBar"
            app:topBarTitleTextSize="14sp" />

        <View
            android:id="@+id/v_center"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topBar"
            android:layout_toStartOf="@+id/v_center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="UI部分"
                android:textColor="#0000FF"
                android:textSize="20dp" />

            <Button
                android:id="@+id/tabBar"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:text="TabBar"
                android:textAllCaps="false"
                android:textSize="14sp" />

            <Button
                android:id="@+id/shapeView"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:text="shapeView"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/dialog"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:text="dialog"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/popupWindow"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:text="PopupWindow"
                android:textAllCaps="false" />


            <Button
                android:id="@+id/util"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:text="util"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/recycleView"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:text="RecycleView"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/timePick"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:text="timePick"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/PickerView"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:text="PickerView"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/ImageViewPager"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:text="ImageViewPager"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/OnclickTest"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:text="OnclickTest"
                android:textAllCaps="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topBar"
            android:layout_toEndOf="@+id/v_center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Lib部分"
                android:textColor="#FF0000"
                android:textSize="20dp" />

            <Button
                android:id="@+id/http"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:text="http"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/imageLoader"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:text="imageLoader"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/sqlite"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:text="sqlite"
                android:textAllCaps="false" />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>