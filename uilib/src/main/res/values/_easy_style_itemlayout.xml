<resources>
    <declare-styleable name="EasyItemLayout">
        <!--<attr name="itemPaddingLeft" format="dimension" />-->
        <!--<attr name="itemPaddingRight" format="dimension" />-->
        <!--<attr name="itemPaddingTop" format="dimension" />-->
        <!--<attr name="itemPaddingBottom" format="dimension" />-->
        <attr name="leftWidth" format="dimension" />
        <attr name="rightWidth" format="dimension" />

        <attr name="leftText" format="string" />
        <attr name="leftTextSize" format="dimension" />
        <attr name="leftTextColor" format="color" />
        <attr name="leftMarginLeft" format="dimension" />

        <attr name="centerTextViewLines" format="integer" />
        <attr name="centerTextViewText" format="string" />
        <attr name="centerTextViewTextHint" format="string" />
        <attr name="centerTextViewTextSize" format="dimension" />
        <attr name="centerTextViewTextColor" format="color" />
        <attr name="centerTextViewTextHintColor" format="color" />
        <attr name="centerTextViewGray">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>

        <attr name="centerIsEditText" format="boolean" />
        <attr name="centerEditTextLines" format="integer" />
        <attr name="centerEditTextTextSize" format="dimension" />
        <attr name="centerEditTextTextColor" format="color" />
        <attr name="centerEditTextTextHint" format="string" />
        <attr name="centerEditTextTextHintColor" format="color" />
        <attr name="centerEditTextMarginTop" format="dimension" />
        <attr name="centerEditTextMarginBottom" format="dimension" />
        <attr name="centerEditTextClearIconVisible" format="boolean" />

        <attr name="rightText" format="string" />
        <attr name="rightTextSize" format="dimension" />
        <attr name="rightTextColor" format="color" />
        <attr name="rightMarginRight" format="dimension" />
        <attr name="rightTextViewGray">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>

        <attr name="rightIconVisible" format="boolean" />

        <attr name="itemBottomLineVisible" format="boolean" />
        <attr name="itemBottomLineMarginLeft" format="dimension" />

        <attr name="android:layout_width" />
        <attr name="android:layout_height" />
        <attr name="android:paddingLeft" />
        <attr name="android:paddingRight" />
        <attr name="android:paddingTop" />
        <attr name="android:paddingBottom" />
        <attr name="android:padding" />
    </declare-styleable>
</resources>
