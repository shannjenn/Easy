<resources>
    <declare-styleable name="EasyShapeTextView">
        <attr name="strokeWidth" format="dimension" />
        <attr name="strokeColor" format="color" />
        <attr name="strokeClickColor" format="color" />

        <attr name="corners" format="dimension" />
        <attr name="cornerLeftTop" format="dimension" />
        <attr name="cornerLeftBottom" format="dimension" />
        <attr name="cornerRightTop" format="dimension" />
        <attr name="cornerRightBottom" format="dimension" />

        <attr name="solidColor" format="color" />
        <attr name="solidClickColor" format="color" />

        <attr name="lineLeftColor" format="color" />
        <attr name="lineRightColor" format="color" />
        <attr name="lineTopColor" format="color" />
        <attr name="lineBottomColor" format="color" />
        <attr name="lineWidth" format="dimension" />

        <attr name="android:textColor" />
        <attr name="textClickColor" format="color" />

        <attr name="clickType">
            <enum name="button" value="0" />
            <enum name="check" value="1" />
            <enum name="enable" value="-1" />
        </attr>

        <!--<attr name="android:paddingLeft"/>
        <attr name="android:paddingRight"/>
        <attr name="android:paddingTop"/>
        <attr name="android:paddingBottom"/>
        <attr name="android:padding"/>-->
    </declare-styleable>
</resources>
