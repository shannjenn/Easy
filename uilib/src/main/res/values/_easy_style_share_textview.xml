<resources>
    <declare-styleable name="EasyTextView">
        <attr name="stroke_width" format="dimension" />
        <attr name="stroke_color" format="color" />
        <attr name="stroke_click_color" format="color" />

        <attr name="corners" format="dimension" />
        <attr name="corners_half_round" format="boolean" />
        <attr name="cornersShowLeft" format="boolean" />
        <attr name="cornersShowRight" format="boolean" />

        <attr name="solid_color" format="color" />
        <attr name="solid_click_color" format="color" />

        <attr name="android:textColor" />
        <attr name="text_click_color" format="color" />

        <attr name="click_type">
            <enum name="enable" value="0" />
            <enum name="click" value="1" />
            <enum name="check" value="2" />
            <enum name="radio" value="3" />
        </attr>

        <!--<attr name="android:paddingLeft"/>
        <attr name="android:paddingRight"/>
        <attr name="android:paddingTop"/>
        <attr name="android:paddingBottom"/>
        <attr name="android:padding"/>-->
    </declare-styleable>
</resources>
