<resources>
    <!--导航布局:可以滚动-->
    <declare-styleable name="EasyTabBarTop">
        <!-- 游标indicator -->
        <attr name="indicatorColor" format="color" />
        <attr name="indicatorHeight" format="dimension" />
        <attr name="indicatorWidth" format="dimension" /><!--如果设置值，indicatorFit不适用-->
        <attr name="indicatorCornerRadius" format="dimension" />
        <attr name="indicatorType">
            <enum name="line" value="0" />
            <enum name="block" value="1" />
        </attr>
        <attr name="indicatorFit">
            <enum name="tabText" value="0" />
            <enum name="tabWidth" value="1" />
        </attr>
        <attr name="indicatorPaddingLeft" format="dimension" /><!--与indicatorFit一起使用的-->
        <attr name="indicatorPaddingRight" format="dimension" /><!--与indicatorFit一起使用的-->

        <!-- 下划线underline -->
        <attr name="underlineColor" format="color" />
        <attr name="underlineHeight" format="dimension" />

        <!-- 标题title -->
        <attr name="tabTextSize" format="dimension" />
        <attr name="tabSelectTextColor" format="color" />
        <attr name="tabUnSelectTextColor" format="color" />
        <attr name="tabTextBold" format="boolean" />
        <attr name="tabTextItalic" format="boolean" />
        <attr name="tabWidth" format="dimension" />
        <attr name="tabHeight" format="dimension" />
        <attr name="tabPaddingLeft" format="dimension" />
        <attr name="tabPaddingRight" format="dimension" />
        <attr name="tabPaddingTop" format="dimension" />
        <attr name="tabPaddingBottom" format="dimension" />
        <attr name="tabWeight" format="boolean" /><!--tab加起来宽度不够mTabsContainer宽度时，平均分布-->

        <attr name="android:layout_width" />
        <attr name="android:layout_height" />

    </declare-styleable>
</resources>
