<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    /*******************************************************************************
    ★★★ Dialog ★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★
    *******************************************************************************/
    <!--Dialog加载中-->
    <style name="_easy_dialog_loading" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置dialog的背景 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否显示title -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 也是个drawable，定义contentoverlay的背景 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 背景是否模糊显示 -->
    </style>


    /*******************************************************************************
    ★★★ ProgressBar ★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★
    *******************************************************************************/
    <!--ProgressBar加载中-->
    <style name="_easy_progressBar_loading" parent="android:Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@drawable/_easy_share_cirle</item>
        <item name="android:minWidth">76dip</item>
        <item name="android:maxWidth">76dip</item>
        <item name="android:minHeight">76dip</item>
        <item name="android:maxHeight">76dip</item>
    </style>

    /*******************************************************************************
    ★★★ TopBar ★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★
    *******************************************************************************/
    <declare-styleable name="TopBar">
        <attr name="title" format="string" />
        <attr name="leftText" format="string" />
        <attr name="leftTextColor" format="color" />
        <attr name="leftTextWithLeftImg" format="reference" />
        <attr name="rightText" format="string" />
        <attr name="rightTextColor" format="color" />
        <attr name="rightImage" format="reference" />
        <attr name="leftImage" format="reference" />
        <attr name="leftImageBackground" format="reference" />
        <attr name="showLeftImage" format="boolean" />
        <attr name="showLeftFaceImage" format="boolean" />
        <attr name="isShowBottomLine" format="boolean" />
    </declare-styleable>
</resources>
