<resources>

    <style name="_easy_AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/_easy_colorPrimary</item>
        <item name="colorPrimaryDark">@color/_easy_colorPrimaryDark</item>
        <item name="colorAccent">@color/_easy_colorAccent</item>
    </style>

    /*******************************************************************************
    ★★★ Dialog ★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★
    *******************************************************************************/
    <!--Dialog加载中-->
    <style name="_easy_dialog_loading" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置dialog的背景 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否显示title -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 也是个drawable，定义contentoverlay的背景 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 背景是否模糊显示 -->
    </style>

    <style name="_easy_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    /*******************************************************************************
    ★★★ ProgressBar ★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★
    *******************************************************************************/
    <!--ProgressBar加载中-->
    <style name="_easy_progressBar_loading" parent="android:Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@drawable/_easy_progress_bar_loading</item>
        <item name="android:minWidth">76dip</item>
        <item name="android:maxWidth">76dip</item>
        <item name="android:minHeight">76dip</item>
        <item name="android:maxHeight">76dip</item>
    </style>

    /*******************************************************************************
    ★★★ TopBar ★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★
    *******************************************************************************/
    <declare-styleable name="TopBar">
        <attr name="title" format="string" />
        <attr name="leftText" format="string" />
        <attr name="leftTextColor" format="color" />
        <attr name="leftTextWithLeftImg" format="reference" />
        <attr name="rightText" format="string" />
        <attr name="rightTextColor" format="color" />
        <attr name="rightImage" format="reference" />
        <attr name="leftImage" format="reference" />
        <attr name="leftImageBackground" format="reference" />
        <attr name="showLeftImage" format="boolean" />
        <attr name="showLeftFaceImage" format="boolean" />
        <attr name="isShowBottomLine" format="boolean" />
    </declare-styleable>

    /*******************************************************************************
    ★★★ 分割线cutline ★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★
    *******************************************************************************/

    <style name="_easy_cutline_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#E0E0E0</item>
    </style>

    <style name="_easy_cutline_vertical">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#E0E0E0</item>
    </style>
</resources>
