<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:minHeight="200dp">

    <include
        android:id="@+id/layout_top_bar"
        layout="@layout/_easy_popup_window_topbar" />

    <com.jen.easyui.view.loopview.StringScrollPicker
        android:id="@+id/pick_string"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/layout_top_bar"
        app:ScrollPickerEndColor="#000000"
        app:ScrollPickerIsCirculation="false"
        app:ScrollPickerMaxTextSize="16sp"
        app:ScrollPickerMinTextSize="14sp"
        app:ScrollPickerStartColor="#335EC2"
        app:ScrollPickerVisibleItemCount="5" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/layout_top_bar"
        android:layout_marginTop="80dp"
        android:background="#F4F4F4" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/layout_top_bar"
        android:layout_marginTop="120dp"
        android:background="#F4F4F4" />

</RelativeLayout>