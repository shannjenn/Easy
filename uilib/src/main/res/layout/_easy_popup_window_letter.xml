<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <include
        android:id="@+id/layout_top_bar"
        layout="@layout/_easy_popup_window_topbar" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_top_bar"
        android:layout_marginEnd="50dp" />

    <com.jen.easyui.recycler.letter.EasyLetterView
        android:id="@+id/lt_letter"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_top_bar"
        android:layout_alignParentEnd="true"
        android:background="#00ffffff"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:letterBackgroundTouchColor="#335EC2"
        app:letterDialogBackgroundDrawable="@drawable/_easy_letter_dialog_background"
        app:letterDialogHeight="50dp"
        app:letterDialogMarginRight="30dp"
        app:letterDialogTextColor="@android:color/holo_red_light"
        app:letterDialogTextSize="40sp"
        app:letterDialogWith="50dp"
        app:letterTextSize="14sp" />
</RelativeLayout>